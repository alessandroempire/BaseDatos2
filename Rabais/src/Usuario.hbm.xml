<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" 
         dynamic-update="false" 
         mutable="true" 
         name="Usuario" 
         table="USUARIO"
         optimistic-lock="version" 
         polymorphism="implicit" 
         select-before-update="false">
      
    <id column="USER_LOGIN" name="login"/>
    
    <property column="USER_PASSWORD" name="password"/>
    <property column="USER_NAME" name="name"/>
    <property column="USER_LAST_NAME" name="last_name"/>
    <property column="USER_BIRTH_DATE" name="birth_date" type="date"/>
    
    <set name="email" table="USER_EMAIL_TABLE">
      <key column="USER_LOGIN"/>
      <element column="USER_EMAIL" type="string"/>
    </set>
    
    <property column="USER_PROMOTIONAL_MONEY" name="promotional_money"/>
    
    <component name="coordinates" class="Coordenadas">
        <component name="latitude" class="DMS">
            <property name="degree" column="USER_LATITUDE_DEGREE"/>
            <property name="minutes" column="USER_LATITUDE_MINUTES"/>
            <property name="seconds" column="USER_LATITUDE_SECONDS"/>
        </component>    
        <component name="longitude" class="DMS">
            <property name="degree" column="USER_LONGITUDE_DEGREE"/>
            <property name="minutes" column="USER_LONGITUDE_MINUTES"/>
            <property name="seconds" column="USER_LONGITUDE_SECONDS"/>
        </component>    
    </component>
    
  </class>
</hibernate-mapping>
