<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="rabais">
  <class dynamic-insert="false" 
         dynamic-update="false" 
         mutable="true" 
         name="rabais.Compra" 
         table="COMPRA"
         optimistic-lock="version" 
         polymorphism="implicit" 
         select-before-update="false">
      
      <id name="id" column="COMPRA">
          <generator class="native"/>
      </id>
      
      <property name="cantidad" column="CANTIDAD" />
     
      <set name="compradores" table="COMPRADORES_USUARIOS" >
        <key> 
            <column name="compra_id" not-null="true"/>
        </key>
        <many-to-many column="usuario_compra_id" class="Usuario"/>
      </set>
      
      <one-to-one name="promocion" class="Promocion" cascade="save-update"/>
      
      <database-object>
          <create>
              
          </create>
          <drop>
              
          </drop>
          <dialect-scope name="org.hibernate.dialect.MySQLDialect"/>
      </database-object>
      
      <database-object>
        <create>      
        <!-- Este trigger le actualiza el salario en 100 a Nina cuando se hace alguna actualizaciÃ³n 
             del dpto -->
	    CREATE TRIGGER actualizar_salario
		AFTER UPDATE ON DEPARTMENT
		FOR EACH ROW
		BEGIN
		   UPDATE EMPLOYEE SET salary = 100 where firstname = "Nina"; 
		END;
        </create>
        <drop>
        drop trigger actualizar_salario;
        </drop>
        <dialect-scope name="org.hibernate.dialect.MySQLDialect"/>
     </database-object>

      
  </class>
</hibernate-mapping>
