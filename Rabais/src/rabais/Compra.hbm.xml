<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="rabais">
  <class dynamic-insert="false" 
         dynamic-update="false" 
         mutable="true" 
         name="rabais.Compra" 
         table="COMPRA"
         optimistic-lock="version" 
         polymorphism="implicit" 
         select-before-update="false">
      
      <id name="id" column="COMPRA_ID">
          <generator class="native"/>
      </id>
      
      <property name="cantidad" column="CANTIDAD" />
     
      <set name="compradores" table="COMPRADORES_USUARIOS" >
        <key> 
            <column name="compra_id" not-null="true"/>
        </key>
        <many-to-many column="usuario_compra_id" class="Usuario"/>
      </set>
      
      <one-to-one name="promocion" class="Promocion" cascade="save-update" fetch="join"/>
      
  </class>
      
    <database-object>
        <create>
              CREATE TRIGGER actualizar_cantidad
                  AFTER INSERT ON COMPRA
                  FOR EACH ROW
                  BEGIN
                      DECLARE IDCOMPRA INTEGER;
            
                      SELECT DISTINCT OFERTA.OFERTA_ID INTO IDCOMPRA
                      FROM OFERTA JOIN PROMOCION JOIN COMPRA
                      WHERE NEW.COMPRA_ID = COMPRA.COMPRA_ID;
            
                      UPDATE OFERTA
                      SET OFERTA_CANTIDAD = OFERTA_CANTIDAD - NEW.CANTIDAD
                      where OFERTA_ID = NEW.OFERTA_ID;
                  END;
        </create>
        <drop>
            drop trigger actualizar_cantidad; 
        </drop>
        <dialect-scope name="org.hibernate.dialect.MySQLDialect"/>
        
    </database-object>
  
</hibernate-mapping>
