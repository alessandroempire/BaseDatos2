<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class 
      dynamic-insert="false" 
      dynamic-update="false" 
      mutable="true" 
      name="Promocion" 
      table="PROMOCION"
      optimistic-lock="version" 
      polymorphism="implicit" 
      select-before-update="false">
      
  <id column="PROMOCION_NOMBRE" name="nombre_promocion"/>
  
  <property column="PROMOCION_DESC_BREVE" name="descripcion_breve"/>
  
  <property column="PROMOCION_DESC_COMPLETA" name="descripcion_completa"/>
  
  <property column="PROMOCION_DESC_ADICIONAL" name="descripcion_adicional"/>
  
  <property column="PROMOCION_MONTO_ORIGINAL" name="monto_original"/>
  
  <set name="palabras_claves" table="PROMOCION_PALABRA_CLAVE_TABLE">
    <key column="PROMOCION_NOMBRE"/>
    <element column="PROMOCION_PALABRA_CLAVE" type="string"/>
  </set>
  
  <set name="pagina_web" table="PROMOCION_PAG_WEB_TABLE">
    <key column="PROMOCION_NOMBRE"/>
    <element column="PROMOCION_PAGINA_WEB" type="string"/>
  </set>
  
  <property column="PROMOCION_CANT_DISPONIBLE" name="cantidad_disponible"/>
  
  <property column="PROMOCION_PUNTAJE_TOTAL" name="puntaje_total"/>
  
  </class>
</hibernate-mapping>
